{
  "name": "metals-desk-os",
  "version": "1.0.0",
  "description": "Institutional Desk-Level Fully Automated Trading OS for XAU/USD and XAG/USD",
  "author": "Carlos @ OpenClaw",
  "category": "trading",
  "tags": ["gold", "silver", "xauusd", "xagusd", "automated-trading", "institutional", "desk-level"],
  "engines": [
    "bias-engine",
    "structure-engine",
    "liquidity-engine",
    "execution-engine",
    "risk-engine",
    "volatility-engine",
    "macro-engine",
    "performance-engine"
  ],
  "automation": [
    "event-bus",
    "scheduler",
    "price-feed",
    "news-monitor",
    "session-engine"
  ],
  "broker": {
    "connector": "mt5-connector",
    "guard": "risk-guard",
    "manager": "order-manager"
  },
  "modes": {
    "1": "Advisory",
    "2": "Semi-Automated",
    "3": "Fully-Automated",
    "4": "Risk-Off Monitoring Only"
  },
  "instruments": ["XAUUSD", "XAGUSD"],
  "sessions": ["Asian", "London", "NewYork"],
  "riskLimits": {
    "maxRiskPerTrade": 0.02,
    "maxDailyExposure": 0.05,
    "maxConsecutiveLosses": 3,
    "volatilitySpikeReduction": 0.5,
    "maxDailyLoss": 0.05
  },
  "entryPoint": "automation/event-bus.js",
  "dependencies": {
    "node-metaapi-sdk": "^27.0.0",
    "ws": "^8.16.0",
    "axios": "^1.6.0",
    "node-cron": "^3.0.3",
    "technicalindicators": "^3.1.0",
    "eventemitter3": "^5.0.1",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1"
  }
}
