{
  "patterns": [
    {
      "name": "sudo_command",
      "pattern": "sudo\\s+",
      "description": "Requires elevated privileges"
    },
    {
      "name": "curl_download",
      "pattern": "curl\\s+(-[a-zA-Z]+\\s+)*https?://",
      "description": "Downloads from URL"
    },
    {
      "name": "wget_download",
      "pattern": "wget\\s+https?://",
      "description": "Downloads from URL"
    },
    {
      "name": "unknown_url",
      "pattern": "https?://[^\\s\\)\\]\\\"\\'\\'\\>]+",
      "description": "External URL",
      "check_allowlist": "urls"
    }
  ]
}
