{
  "name": "wps-office",
  "version": "1.3.0",
  "description": "WPS Office automation skill supporting document creation, Markdown conversion to Word/Excel/PPT, and full image-text layout for all formats.",
  "author": "MaxStorm Team",
  "license": "MIT",
  "homepage": "https://github.com/maxstorm/wps-skill",
  "keywords": ["wps", "office", "document", "excel", "word", "pdf", "文档", "markdown", "图文混排", "图片处理"],
  "trigger": {
    "patterns": [
      "wps",
      "文档",
      "表格",
      "excel",
      "word",
      "pdf转换",
      "创建文档",
      "编辑文档",
      "智能表单",
      "智能文档",
      "多维表格",
      "流程图",
      "思维导图",
      "md转word",
      "markdown转word",
      "word转markdown",
      "插入图片",
      "图文混排",
      "图片网格",
      "markdown转换"
    ]
  },
  "tools": ["exec"],
  "entry": "scripts/main.py",
  "config": {
    "schema": {
      "default_save_path": {
        "type": "string",
        "description": "默认文档保存路径",
        "default": "~/Documents/WPS"
      },
      "wps_path": {
        "type": "string",
        "description": "WPS安装路径（可选，自动检测）",
        "default": ""
      },
      "app_id": {
        "type": "string",
        "description": "WPS开放平台App ID（可选，用于WPS 365功能）",
        "default": ""
      },
      "app_secret": {
        "type": "string",
        "description": "WPS开放平台App Secret（可选，用于WPS 365功能）",
        "default": "",
        "secret": true
      }
    }
  },
  "dependencies": {
    "python": ">=3.8",
    "packages": [
      "pyautogui",
      "pyperclip",
      "Pillow",
      "python-docx",
      "markdown",
      "openpyxl",
      "python-pptx"
    ]
  },
  "platforms": ["darwin", "linux", "win32"]
}
