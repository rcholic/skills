      "type": "hybrid",
      "patterns": [
        "exclusive\\s+(offer|deal|discount|access)",
        "invitation\\s+only",
        "(vip|member)\\s+exclusive",
        "specially?\\s+selected",
        "chosen\\s+(few|customers?)"
      ],
      "keywords": [
        "exclusive offer",
        "invitation only",
        "VIP access",
        "members only",
        "special selection"
      ]
    },
    "remediation": {
      "guidance": "Remove false exclusivity claims. Only use \"exclusive\" for genuinely limited or member-only offers.",
      "examples": []
    },
    "source": {
